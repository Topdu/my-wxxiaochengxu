/**index.wxss**/
page {
    background: #FFFFFF;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    padding-bottom: 220rpx;
}

.note-list {
    width: 100%;
    padding: 0 40rpx;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
}

.note-list .note-item {
    width: 100%;
    margin-top: 40rpx;
    background: #A8E0FF;
    border-radius: 14rpx;
    color: #FFFFFF;
    display: flex;
    flex-direction: column;
    box-shadow: 0 2px 10px rgba(0, 49, 114, .2);
}

.note-list .voice-playing {
    animation: blinking 1500ms linear infinite;
}

.note-list .note-item .note-item-voice {
    width: 100%;
    padding: 30rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    box-sizing: border-box;
}

.note-list .note-item .note-item-voice image {
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
}

.note-list .note-item .note-item-voice text {
    font-size: 30rpx;
}

.note-list .note-item .note-item-word {
    width: 100%;
    padding: 0 30rpx;
    padding-bottom: 30rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    box-sizing: border-box;
}

.note-list .note-item .note-item-word text {
    font-size: 34rpx;
}

.note-splash {
    position: fixed;
    bottom: 100rpx;
    left: 50%;
    margin-left: -250rpx;
    z-index: 900;
    width: 500rpx;
    height: 312rpx;
}

.note-gradient {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 220rpx;
    background: linear-gradient(to top, rgba(255,255,255,1) 30%, rgba(255,255,255,0));
    z-index: 900;
}

.note-btn {
    position: fixed;
    bottom: 40rpx;
    left: 50%;
    margin-left: -70rpx;
    width: 140rpx;
    height: 140rpx;
    background: #A8E0FF;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    box-shadow: 0 2px 10px rgba(0, 49, 114, .5);
    transition: all 300ms ease;
    z-index: 1000;
}

.note-btn:active {
    background: #4894f7;
    box-shadow: none;
}

.note-btn image {
    width: 64rpx;
    height: 64rpx;
}

/* 以下定义动画帧 */
@keyframes blinking {
    0% {
        background: #A8E0FF;
    }
    50% {
        background: #4e98f8;
    }
    100% {
        background: #A8E0FF;
    }
}
